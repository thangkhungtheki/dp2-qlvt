<!-- Page Heading -->
<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Thông số thiết bị động cơ, systems day: <%= daynow  %></h1>
  <div class="form-row">
    <div class="form-group col-md-12">
      <button type="button" class="btn btn-primary" onclick="them()">Thêm Động Cơ</button>
      <button type="button" class="btn btn-success float-right">Xuất Excel</button>
    </div>
  </div>



  <div class="card shadow mb-4">
    <!-- <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Database User Views </h6>
        </div> -->
    <div class="card-body">

      <div class="table-responsive">
        <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr class="table">
              <th>STT</th>
              <th>Tên Thiết Bị</th>
              <th>Vị trí</th>
              <th>Công suất</th>
              <th>Model</th>
              <th>Điện áp</th>
              <th>Ghi chú</th>
              <th>Control</th>
            </tr>
          </thead>
          <tfoot>
            <tr class="table">
              <th>STT</th>
              <th>Tên Thiết Bị</th>
              <th>Vị trí</th>
              <th>Công suất</th>
              <th>Model</th>
              <th>Điện áp</th>
              <th>Ghi chú</th>
              <th>Control</th>
            </tr>
          </tfoot>

          <tbody>
            <% var stt = 0 %>
            <% data.forEach((value)=>{ %>
            <% var id = value._id %>
            <% var bien = value.tenthietbi %>
            <% stt = stt + 1 %>
            <td>
              <b><%= stt %></b>
            </td>
            <td>
              <%= value.tenthietbi %>
            </td>
            <td>
              <%= value.vitri %>  
            </td>
            <td>
              <%= value.congsuat %>
            </td>
            <td>
              <%= value.model %>
            </td>
            <td>
              <%= value.dienap %>
            </td>
            <td>
              <%= value.ghichu %>
            </td>
            <td>

              <div class="btn btn-info btn-circle btn-sm" onclick="Sua('<%= id %>', '<%= bien %>')" data-toggle="modal" data-target="#suamodal">
                <i class="fas fa-info-circle"></i>
              </div>
              <div class="btn btn-danger btn-circle btn-sm" data-toggle="modal" data-target="#xoauserModal" onclick="Xoatb('<%= id %>','<%= bien %>')">
                <i class="fas fa-trash">
                </i>
              </div>
            </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
