<script src="vendor/jquery/jquery.min.js"></script>
<script>
  function btnclick(ma) {

    window.location.href = '/qlkt/info?mayeucau=' + ma
  }

  function sua(ma) {
    var mass = ma
    $('#btnduyet').val(mass)
    $('#btnxoayc').val(mass)
    // alert(mass)
  }

  function duyetyc() {
    var mas = $('#btnduyet').val()
    // alert(mas)
    $.ajax({
        method: "POST",
        url: "/qlkt/updatettbp",
        data: {mayeucau: mas},
      })
      .done(function(msg) {
        alert('Đã duyệt !!!')
        window.location.href = "/qlkt"
      });

  }

  function xoayc() {
    var mes = $('#btnxoayc').val()
    $.ajax({
        method: "POST",
        url: "/qlkt/deletettbp",
        data: {mayeucau: mes},
      })
      .done(function(msg) {
        alert('Đã xoá !!!')
        window.location.href = "/qlkt"
      });
  }
</script>
