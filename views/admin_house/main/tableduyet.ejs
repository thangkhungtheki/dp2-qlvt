<!-- Page Heading -->

<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Bảng Yêu Cầu</h1>

  <div class="table-responsive">
    <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr class="table-success">
          <th>Control</th>
          <th>NgườiYC</th>
          <th>NgàyYC</th>
          <th>BP</th>
          <th>Đt</th>
          <th>Vịtri</th>
          <th>khan</th>
          <th>Mô tả</th>
          <th>ttbp</th>
          <th>XemChiTiet</th>

        </tr>
      </thead>
      <tfoot>
        <tr class="table-success">
          <th>Control</th>
          <th>NgườiYC</th>
          <th>NgàyYC</th>
          <th>BP</th>
          <th>Đt</th>
          <th>Vịtri</th>
          <th>khan</th>
          <th>Mô tả</th>
          <th>ttbp</th>
          <th>XemChiTiet</th>
        </tr>
      </tfoot>

      <tbody>
        <% data.forEach((data)=>{ %>
        <% var bien = data.mayeucau %>
        <tr>
          <td>
            <div>
              <div class="btn btn-info btn-circle btn-sm" data-toggle="modal" data-target="#idsua" onclick="sua('<%= bien %>')">
                <i class="fas fa-info-circle"></i>
              </div>
              <div class="btn btn-danger btn-circle btn-sm" data-toggle="modal" data-target="#idxoa" onclick="sua('<%= bien %>')">
                <i class="fas fa-trash">
                </i>
              </div>
            </div>
            
          </td>
          <td>
            <%= data.nguoiyeucau %>
          </td>
          <td>
            <%= data.ngayyeucau %>
          </td>
          <td>
            <%= data.bophan %>
          </td>
          <td>
            <%= data.dienthoai %>
          </td>
          <td>
            <%= data.vitri %>
          </td>
          <td>
            <%= data.khancap %>
          </td>
          <td>
            <%= data.mota %>
          </td>
          <td>
            <%= data.ttbp %>
          </td>
          <td>
            <button type="button" class="btn btn-info" onclick="btnclick('<%= data.mayeucau %>')">Info</button>
          </td>
        </tr>


        <% }) %>


      </tbody>
    </table>
  </div>
